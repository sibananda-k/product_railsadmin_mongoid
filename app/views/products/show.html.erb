<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<p>
  <b>SKU:</b>
  <%= @product.SKU %>
</p>

<p>
			<b>Catagory:</b>
			<% if @product.catagory != nil %>
			<b><%= link_to @product.catagory.name, catagory_path(@product.catagory.id) %></b>
